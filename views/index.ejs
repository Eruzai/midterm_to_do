<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <!-- External CSS -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">

  <!-- CSS -->
  <link rel="stylesheet" href="/styles/header.css">
  <link rel="stylesheet" href="/styles/main.css">

  <!-- Scripts -->
  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="/scripts/app.js"></script>

  <!-- Web Tab Name -->
  <title>SMART TO DO</title>
</head>
<body>

  <header class="header">
    <h1 class="logo">SMART TODO LIST</h1>
    <section class="user">
      <div class="logged-in-display">
        <div class="email-and-logout">
          <h3 class="user-info"></h3>
          <form action="/logout" method="post" class="logout"></form>
        </div>
        <div class="edit-and-form">
          <button class="edit-profile">Edit Email</button>
          <form action="/updateuser" method="post" class="update-profile">
            <label for="email"></label>
            <input type="email" name="email" id="email">
            <button>Confirm</button>
          </form>
        </div>
      </div>
      <!-- LOGIN SECTION -->
      <section class="login"></section>
    </section>
  </header>

  <main class="container">

    <!-- ADD ITEM SECTION -->
    <section class="add-item">
      <form action="/additem" method="POST">
        <label for="title">Submit TODO items here:</label>
        <input type="text" id="title" name="title">
        <button type="submit" class="add-todo-item">Submit</button>
      </form>
    </section>

    <!-- CATEGORIES SECTION -->
    <section class="categories-container">
      <h3>If an item is miscategorized you can drag it into a different list!</h3>
      <div>
        <button type="submit" id="1" class="fetch-movies list-items">To watch</button>
        <button type="submit" id="2" class="fetch-books list-items">To read</button>
        <button type="submit" id="3" class="fetch-restaurants list-items">To eat</button>
        <button type="submit" id="4" class="fetch-products list-items">To buy</button>
      </div>
    </section>

    <section class="messages">
      <h3 class="info wait-msg hidden">Please wait...</h3>
      <h3 class="error error-msg1 hidden">You must be logged in to add items</h3>
      <h3 class="error error-msg2 hidden">You must be logged in to view lists</h3>
    </section>

    <!-- ITEMS SECTION -->
    <section class="items-container"></section>

  </main>
</body>
</html>
